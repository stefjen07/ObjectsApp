<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="25dp" android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.2"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup" android:layout_weight="0.1">
            <RadioButton
                    android:text="круг"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:checked="true"/>
            <RadioButton
                    android:text="прямоугольник"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2"/>
            <RadioButton
                    android:text="треугольник"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton3"/>
        </RadioGroup>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.4"/>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1" app:cardBackgroundColor="#ECECEC"
                android:id="@+id/cardView1">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/textView1" android:layout_weight="0.1" android:minHeight="48dp"
                    tools:ignore="SpeakableTextPresentCheck"/>
        </androidx.cardview.widget.CardView>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1"/>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1" app:cardBackgroundColor="#ECECEC"
                android:id="@+id/cardView2">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/textView2" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"/>
        </androidx.cardview.widget.CardView>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1"/>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.1" app:cardBackgroundColor="#ECECEC"
                android:id="@+id/cardView3">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/textView3" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"/>
        </androidx.cardview.widget.CardView>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.4"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0.2">
            <TextView
                    android:text="Площадь:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0.8"
                    android:textAlignment="textEnd"/>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="0.05"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/resultTextView" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="2"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>